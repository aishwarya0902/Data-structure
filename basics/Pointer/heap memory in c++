#include <iostream>
#include <stdio.h>
#include <stdlib.h>

using namespace std;

int main()
{
   int *p;
   p = new int[6]; // using heap memory in c++
   p[0]=31;p[1]=24;p[2]=8;p[3]=41;p[4]=6;p[5]=12;
   
   for(int i=0;i < 6 ; i++){
       
       cout<<p[i]<<endl;
   }
   delete [] p ; // deleting the elements in heap memory that are used
    return 0;
}
